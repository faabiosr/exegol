{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "foreground": "cyan",
          "template": "[{{ .Icon }} {{ .PWD }}] "
        },
        {
          "type": "git",
          "style": "plain",
          "template": "<cyan>[</><lightGreen>{{ .HEAD }}</><cyan>]</> "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "#C94A16"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "white",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global

[color]
    ui = true

[alias]
    br = branch
    ci = commit
    co = checkout
    cp = cherry-pick
    df = diff
    lg = log -p
    ps = push
    st = status
    undo = reset HEAD

[commit]
    verbose = true

[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[commit]
	gpgsign = true

[include]
    path = ~/.gitconfig.local
